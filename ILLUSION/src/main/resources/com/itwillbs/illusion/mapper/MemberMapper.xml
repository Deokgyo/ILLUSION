<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.illusion.mapper.MemberMapper">

	<select id="checkIdCount">
	SELECT CASE WHEN count(*) = 0 THEN '사용 가능한 아이디'
							  ELSE '사용 불가능한 아이디(아이디중복)' END as msg
		 , CASE WHEN count(*) = 0 THEN 'blue'
								  ELSE 'red' END as color
	  FROM MEMBER
	 WHERE member_id = #{member_id} 
	</select>
	
	<select id="checkId">
	SELECT COUNT(*) AS CNT
	  FROM MEMBER
	 WHERE member_id = #{member_id}
	</select>
	
	<insert id="insertMember">
		INSERT INTO member
					(member_name
					,member_id
					,member_pw
					,member_email
					,member_phone
					,address_num
					,address_name
					,member_type
					,member_status
					,member_marketing_agreed
					,gender
					,resume_birth
					)
			VALUES  (#{member_name}
					,#{member_id}
					,#{member_pw}
					,#{member_email}
					,#{member_phone}
					,#{address_num}
					,#{address_name}
					,#{member_type}
					,#{member_status}
					,#{member_marketing_agreed}
					,#{gender}
					,#{resume_birth}
					)
					
	</insert>

	<select id="isMemberIdDuplicate">
	 SELECT COUNT(*)
	   FROM member 
	   WHERE member_id = #{member_id}
	</select>
	
	<insert id="insertMailAuthInfo">
		INSERT INTO mail_auth_info
		VALUES (#{email},
				#{auth_code})
	</insert>

	<select id="selectMailAuthInfo">
		SELECT *
		FROM mail_auth_info
		WHERE email = #{email}
	</select>

	<update id="updateMailAuthStatus">
		UPDATE member
		SET mail_auth_status = 'Y'
		WHERE member_email = #{email}
	</update>

	<delete id="deleteMailAuthInfo">
		DELETE FROM mail_auth_info
		WHERE email = #{email}
	</delete>

	<!-- 조영재 -->
	<select id="getMemberInfoById">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>
	
</mapper>

