<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.illusion.mapper.MemberMapper">

	<select id="checkIdCount">
	SELECT  COUNT(*)
	  FROM member
	 WHERE member_id = #{member_id} 
	</select>
	
	<insert id="insertMember">
		INSERT INTO member
					(member_name
					,member_id
					,member_pw
					,member_email
					,member_phone
					,address_num
					,address_name
					,member_type
					,member_status
					,member_marketing_agreed
					,gender
					,resume_birth
					,recruiter_number
					)
			VALUES  (#{member_name}
					,#{member_id}
					,#{member_pw}
					,#{member_email}
					,#{member_phone}
					,#{address_num}
					,#{address_name}
					,#{member_type}
					,#{member_status}
					,#{member_marketing_agreed}
					,#{gender}
					,#{resume_birth}
					,#{recruiter_number}
					)
					
	</insert>

	<select id="isMemberIdDuplicate">
	 SELECT COUNT(*)
	   FROM member 
	   WHERE member_id = #{member_id}
	</select>
	
	<insert id="insertMailAuthInfo">
		INSERT INTO mail_auth_info
		VALUES (#{email},
				#{auth_code})
	</insert>

	<select id="selectMailAuthInfo">
		SELECT *
		FROM mail_auth_info
		WHERE email = #{email}
	</select>

	<update id="updateMailAuthStatus">
		UPDATE member
		SET mail_auth_status = 'Y'
		WHERE member_email = #{email}
	</update>

	<delete id="deleteMailAuthInfo">
		DELETE FROM mail_auth_info
		WHERE email = #{email}
	</delete>

	<!-- 조영재 -->
	<select id="getMemberInfoById">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>
	
	<select id="checkRecruiterNumber">
	 SELECT COUNT(*)
	   FROM member
	  WHERE recruiter_number = #{recruiter_number}
	</select>

	<!-- 마이페이지 토큰 업데이트 (이대은 수정) -->
	<update id="updateMemberTokens" parameterType="map">
	    UPDATE member
	       SET token = token + #{tokenAmount}
	     WHERE member_idx = #{memberIdx}
	</update>
	
	<select id="selectMemberTokens" parameterType="int" resultType="int">
	    SELECT token 
	      FROM member 
	     WHERE member_idx = #{memberIdx}
	</select>

	
</mapper>

