<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.illusion.mapper.MemberMapper">
	<insert id="insertMember">
	INSERT INTO member
			  (
				member_name
				,member_id
				,member_pw
				,member_email
				,member_phone
				,address_num
				,address_name
				,member_type
				,member_status
				,member_marketing_agreed
				,gender
				,resume_birth
			   )
		VALUES ( 
				#{member_name}
				,#{member_id}
				,#{member_pw}
				,#{member_email}
				,#{member_phone}
				,#{address_num}
				,#{address_name}
				,#{member_type}
				,#{member_status}
				,#{member_marketing_agreed}
				,#{gender}
				,#{resume_birth}
				)
	</insert>

	<insert id="insertMailAuthInfo">
		INSERT INTO mail_auth_info
		VALUES (#{email},
		#{auth_code})
	</insert>


	<select id="selectMailAuthInfo">
		SELECT *
		FROM mail_auth_info
		WHERE email = #{email}
	</select>

<!-- 	<update id="updateMailAuthStatus"> -->
<!-- 	UPDATE mail_auth_info -->
<!-- 	SET mail_auth_status = 'Y' -->
<!-- 	WHERE email = #{email} -->
<!-- 	</update> -->

	<delete id="deleteMailAuthInfo">
		DELETE FROM mail_auth_info
		WHERE email = #{email}
	</delete>

	<select id="getMemberInfo">
		SELECT *
		FROM MEMBER
		WHERE id = #{id}
	</select>
	
	
	
	<!-- 아이디로 멤버 정보 조회 -->
	<select id="getMemberById">
		SELECT member_idx
		  FROM member
		 WHERE member_id = #{member_id}
	</select>

	<select id="getMemberInfoById">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>
	
</mapper>

