<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.illusion.mapper.MemberMapper">

	<select id="checkIdCount">
	SELECT  COUNT(*)
	  FROM member
	 WHERE member_id = #{member_id} 
	</select>
	
	<insert id="insertMember">
		INSERT INTO member
					(member_name
					,member_id
					,member_pw
					,member_email
					,member_phone
					,address_num
					,address_name
					,member_type
					,member_status
					,member_marketing_agreed
					,gender
					,resume_birth
					)
			VALUES  (#{member_name}
					,#{member_id}
					,#{member_pw}
					,#{member_email}
					,#{member_phone}
					,#{address_num}
					,#{address_name}
					,#{member_type}
					,#{member_status}
					,#{member_marketing_agreed}
					,#{gender}
					,#{resume_birth}
					)
					
	</insert>

	<select id="isMemberIdDuplicate">
	 SELECT COUNT(*)
	   FROM member 
	   WHERE member_id = #{member_id}
	</select>
	
	<insert id="insertMailAuthInfo">
		INSERT INTO mail_auth_info
		VALUES (#{email},
				#{auth_code})
	</insert>

	<select id="selectMailAuthInfo">
		SELECT *
		FROM mail_auth_info
		WHERE email = #{email}
	</select>

	<update id="updateMailAuthStatus">
		UPDATE member
		SET mail_auth_status = 'Y'
		WHERE member_email = #{email}
	</update>

	<delete id="deleteMailAuthInfo">
		DELETE FROM mail_auth_info
		WHERE email = #{email}
	</delete>

	<!-- 조영재 -->
	<select id="getMemberInfoById">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>
	
	<insert id="insertRecruiterMember">
	INSERT INTO member
			   ( recruiter_number
				,recruiter_member_email
			   )
		VALUES ( #{recruiter_number}
				,#{recruiter_member_email}
			   )
	</insert>
	
	<insert id="insertCompany">
	INSERT INTO company
				( company_name
				 ,ceo_name
				 ,company_type
				 ,company_estab_date
				  address_idx
			   )
		VALUES ( #{company_name}
				,#{ceo_name}
				,#{company_type}
				,#{company_estab_date}
				 #{address_idx}
			   )
	</insert>
	
</mapper>

