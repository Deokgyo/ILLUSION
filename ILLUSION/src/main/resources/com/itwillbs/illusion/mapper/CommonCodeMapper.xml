<mapper namespace="com.itwillbs.illusion.mapper.CommonCodeMapper">
	
	<select id="findSubCodesByParentCode" resultType="com.itwillbs.illusion.vo.CommonCodeVO">
	    SELECT
            code_group_id, code, code_name, parent_code_id
        FROM
            common_code
        WHERE
            parent_code_id = #{parentCode}
        ORDER BY
            code_name ASC
	</select>
	
