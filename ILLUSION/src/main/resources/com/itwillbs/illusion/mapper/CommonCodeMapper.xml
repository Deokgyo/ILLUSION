<mapper namespace="com.itwillbs.illusion.mapper.CommonCodeMapper">
	
	<select id="findCodesByGroupId" parameterType="string" resultType="com.itwillbs.illusion.vo.CommonCodeVO">
        SELECT
        	code_group_id,
            code,
            code_name,
            parent_code_id
        FROM
            common_code
        WHERE
            code_group_id = #{groupId}
        ORDER BY
            code ASC
	</select>
	
